{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "ignoreDeprecations": "5.0",
    "allowJs": true,
    "checkJs": false
  },
  "exclude": ["node_modules", "dist", "tests", "**/*.test.ts", "**/*.spec.ts"]
} 